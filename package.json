{
  "name": "plattos",
  "version": "1.0.0",
  "description": "Site do studio Plattos",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/font.css css/style.comp.css ",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.concat.css -o css/style.prefix.css",
    "compress:css":"node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css":"npm-run-all compile:sass concat:css prefix:css compress:css",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alvaro-alves99/site-plattos.git"
  },
  "author": "√Ålvaro Alves",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alvaro-alves99/site-plattos/issues"
  },
  "homepage": "https://github.com/alvaro-alves99/site-plattos#readme",
  "devDependencies": {
    "autoprefixer": "^10.3.6",
    "concat": "^1.0.3",
    "include-media": "^1.4.10",
    "node-sass": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.8",
    "postcss-cli": "^9.0.1"
  }
}
